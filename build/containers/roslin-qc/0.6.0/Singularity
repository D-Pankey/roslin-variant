Bootstrap: docker-daemon
From: roslin-qc:0.6.0

%setup

    # copy settings-container.sh from the host to the container
    cp /vagrant/build/scripts/settings-container.sh $SINGULARITY_ROOTFS/srv

%post

    # load the settings-container.sh which was copied in the %setup step
    source /srv/settings-container.sh

    # create an empty directory for each bind point defined
    for dir in $SINGULARITY_BIND_POINTS
    do
        mkdir -p $dir
    done

    # remove settings-container.sh
    rm -rf /srv/settings-container.sh

%runscript

    # disable per-user site-packages before run
    export PYTHONNOUSERSITE="set"
    case $1 in
        mergeCutAdaptStats) shift; exec python /usr/bin/mergeCutAdaptStats.py "$@" ;;
        analyzeFingerprint) shift; exec python /usr/bin/analyzeFingerprint.py "$@" ;;
        qc_summary) shift; exec Rscript qc_summary.R 
        mergeMeanQualityHistograms) shift; exec python /usr/bin/mergeMeanQualityHistograms.py "$@" ;;
        mergeGcBiasMetrics) shift; exec python /usr/bin/mergeGcBiasMetrics.py "$@" ;;
        mergeInsertSizeHistograms) shift; exec python /usr/bin/mergeInsertSizeHistograms.py "$@" ;;
        mergePicardMetrics) shift; exec python /usr/bin/mergePicardMetrics.py "$@" ;; 
        stitch_pdf) shift; exec java -jar QCPDF.jar "$@" ;;
        generate_pdf) shift; exec python /usr/bin/generate_pdf.py "$@" ;; 
        *) echo "mergeCutAdaptStats, analyzeFingerprint, qc_summary, mergeMeanQualityHistograms, mergeGcBiasMetrics, mergeInsertSizeHistograms, mergePicardMetrics, stitch_pdf, or generate_pdf?"; exit 1 ;;

%test

    # get actual output from generate_pdf
        python /usr/bin/generate_pdf.py 2>&1 | head -1 > /srv/actual_generate_pdf.diff.txt

    # expected generate_pdf output
    cat > /srv/expected_generate_pdf.diff.txt << EOM
usage: generate_pdf.py [-h] [--gcbias-files GCBIAS_FILES]
EOM

    # diff generate_pdf
    diff /srv/actual_generate_pdf.diff.txt /srv/expected_generate_pdf.diff.txt

    # delete tmp files
    rm -rf /srv/*.diff.txt
